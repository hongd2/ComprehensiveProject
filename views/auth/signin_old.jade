doctype html
html
  head
    meta(charset='UTF-8')
    title Login/Sign-In
    link(rel='stylesheet', href='/static/css/normalize.css')
    link(rel='stylesheet prefetch', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/static/css/style.css')
  body
    #presetActiveTab(style="display: none;")= activeTab
    .logmod
      .logmod__wrapper
        // <span class="logmod__close">Close</span>
        .logmod__container
          ul.logmod__tabs
            li(data-tabtar='lgm-2')
              a(href='#') Login
            li(data-tabtar='lgm-1')
              a(href='#') Sign Up
          .logmod__tab-wrapper
            .logmod__tab.lgm-1
              .logmod__heading
                span.logmod__heading-subtitle
                  | Enter your personal details 
                  strong to create an acount
                span.errorMessage(style='color: red;')= signUpErrorMessage
              .logmod__form
                form.simform(accept-charset='utf-8', name='signin', action='/signup', method='post')
                  .sminputs
                    .input.full
                      label.string.optional(for='password') Email*
                      input#username.string.optional(maxlength='100', name='username', placeholder='Email', type='email', size='50')
                  .sminputs
                    .input.string.optional
                      label.string.optional(for='password') Password *
                      input#password.string.optional(type='password', name='password', maxlength='100', placeholder='Password', size='50')
                    .input.string.optional
                      label.string.optional(for='passwordRepeat') Repeat password *
                      input#passwordRepeat.string.optional(type='password', maxlength='100', name='passwordRepeat', placeholder='Repeat password', size='50')
                  .simform__actions
                    input.sumbit(name='commit', type='submit', value='Create Account')
                    span.simform__actions-sidetext
                      | By creating an account you agree to our
                      a.special(href='#', target='_blank', role='link') Terms & Privacy
              .logmod__alter
                .logmod__alter-container
                  a.connect.facebook(href='/auth/facebook')
                    .connect__icon
                      i.fa.fa-facebook
                    .connect__context
                      span
                        | Create an account with 
                        strong Facebook
                  a.connect.googleplus(href='/auth/google')
                    .connect__icon
                      i.fa.fa-google-plus
                    .connect__context
                      span
                        | Create an account with 
                        strong Google+
            .logmod__tab.lgm-2
              .logmod__heading
                span.logmod__heading-subtitle
                  | Enter your email and password 
                  strong to sign in
                  div(style='color: red;')=errorMessage
              .logmod__form
                form.simform(accept-charset='utf-8', action='/signin', method='post')
                  .sminputs
                    .input.full
                      label.string.optional(for='username') Email*
                      input#username.string.optional(maxlength='100', placeholder='Email', name="username", type='email', size='50')
                  .sminputs
                    .input.full
                      label.string.optional(for='password') Password *
                      input#password.string.optional(maxlength='100', placeholder='Password', name="password", type='password', size='50')
                      // <span class="hide-password">Show</span>
                  .simform__actions
                    input.sumbit(name='commit', type='submit', value='Log In')
                    // <span class="simform__actions-sidetext"><a class="special" role="link" href="#">Forgot your password?<br>Click here</a></span>
              .logmod__alter
                .logmod__alter-container
                  a.connect.facebook(href='/auth/facebook')
                    .connect__icon
                      i.fa.fa-facebook
                    .connect__context
                      span
                        | Sign in with 
                        strong Facebook
                  a.connect.googleplus(href='/auth/google')
                    .connect__icon
                      i.fa.fa-google-plus
                    .connect__context
                      span
                        | Sign in with 
                        strong Google+
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='/static/js/index.js')
