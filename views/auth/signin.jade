extends ../common/commonPanel

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Please Sign In
          .panel-body
            //- if errorMessage
            span.center-block(style='color: red;')= errorMessage
            form(role='form', accept-charset='utf-8', action='/signin', method='post')
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='username', type='username', autofocus='')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                //- .checkbox
                //-   label
                //-     input(name='remember', type='checkbox', value='Remember Me')
                //-     | Remember Me
                input.btn.btn-lg.btn-success.btn-block(name='commit', type='submit', value='Log In')
            .row.center-block
              | New to waiterlink? 
              a(href='/signup') 
                strong
                  | Sign up now
