extends ../common/commonPanel

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Sign Up New Account
          .panel-body
            span.center-block(style='color: red;')= errorMessage
            form(role='form', accept-charset='utf-8', action='/signup', method='post')
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='username', type='email', autofocus='')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .form-group
                  input.form-control(placeholder='Repeat Password', name='passwordRepeat', type='password', value='')
                //- .checkbox
                //-   label
                //-     input(name='remember', type='checkbox', value='Remember Me')
                //-     | Remember Me
                input.btn.btn-lg.btn-success.btn-block(name='commit', type='submit', value='Sign up')
            .row.center-block
              | Already got an account? 
              a(href='/signin') 
                strong
                  | Sign in now
